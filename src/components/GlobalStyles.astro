---
import "../styles/animations.css";
import "../styles/scrollbar.css";
import "../styles/transitions.css";
import "../styles/searchbar.css";
import "overlayscrollbars/overlayscrollbars.css";
---

<style is:global>
  :root {
    --hue: 32;

    --primary-color: hsl(32, 100%, 50%);
    --primary-color-lighten: hsl(32, 100%, 95%);
    --primary-color-hover: hsl(32, 100%, 60%);
    --primary-color-transparent: hsl(32, 100%, 50%, 0.12);
    --text-color: hsl(0, 0%, 20%);
    --text-color-lighten: hsl(0, 0%, 40%);
    --card-color: hsl(0, 0%, 100%);
    --card-color-transparent: hsl(0, 0%, 100%, 0.85);
    --background-color: hsl(32, 100%, 98%);

    --brand-font: "Raleway", "Noto Sans SC", sans-serif;
    --primary-font: "Noto Sans SC", sans-serif;
    --code-font: "JetBrains Mono", "Fira Code", monospace;

    --page-width-lg: 992px;
    --page-width-xl: 1264px;

    --banner-height: 55vh;
    --title-font: var(--brand-font);
    --title-color: hsl(0, 0%, 100%, 0.95);
    --subtitle-font: var(--brand-font);
    --subtitle-color: hsl(0, 0%, 100%, 0.85);

    --onload-animation-delay: 100ms;
    --onload-animation-interval: 100ms;
  }

  :root.dark {
    --primary-color: oklch(70% 0.2 var(--hue));
    --primary-color-lighten: oklch(45% 0.06 var(--hue));
    --primary-color-hover: oklch(60% 0.22 var(--hue));
    --text-color: oklch(95% 0.005 var(--hue));
    --text-color-lighten: oklch(85% 0.004 var(--hue));
    --card-color: oklch(25% 0.02 var(--hue));
    --card-color-lighten: oklch(40% 0.04 var(--hue));
    --card-color-transparent: oklch(30% 0.025 var(--hue) / 85%);
    --background-color: oklch(17.5% 0.015 var(--hue));
  }

  .swup-progress-bar {
    height: 5px;
    background-color: var(--primary-color);
  }
</style>

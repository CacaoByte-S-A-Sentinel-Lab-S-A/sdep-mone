---
import "../styles/animations.css";
import "../styles/scrollbar.css";
import "../styles/transitions.css";
import "../styles/searchbar.css";
import "overlayscrollbars/overlayscrollbars.css";
---

<style is:global>
  :root {
    --hue: 32;

    --primary-color: hsl(32, 100%, 50%);
    --primary-color-lighten: hsl(32, 100%, 95%);
    --primary-color-hover: hsl(32, 100%, 90%);
    --primary-color-transparent: hsl(32, 100%, 50%, 0.15);
    --text-color: hsl(0, 0%, 30%);
    --text-color-lighten: hsl(0, 0%, 50%);
    --card-color: hsl(0, 0%, 100%);
    --card-color-transparent: hsl(0, 0%, 100%, 0.85);
    --background-color: hsl(32, 100%, 97%);

    --brand-font: "Raleway", "Noto Sans SC", sans-serif;
    --primary-font: "Noto Sans SC", sans-serif;
    --code-font: "JetBrains Mono", "Fira Code", monospace;

    --page-width-lg: 992px;
    --page-width-xl: 1264px;

    --banner-height: 55vh;
    --title-font: var(--brand-font);
    --title-color: hsl(0, 0%, 100%, 0.95);
    --subtitle-font: var(--brand-font);
    --subtitle-color: hsl(0, 0%, 100%, 0.85);

    --onload-animation-delay: 100ms;
    --onload-animation-interval: 100ms;
  }

  :root.dark {
    --primary-color: hsl(32, 100%, 50%);
    --primary-color-lighten: hsl(32, 100%, 40%);
    --primary-color-hover: hsl(32, 100%, 20%);
    --text-color: hsl(32, 10%, 95%);
    --text-color-lighten: hsl(32, 10%, 90%);
    --card-color: hsl(32, 10%, 25%);
    --card-color-lighten: hsl(32, 10%, 40%);
    --card-color-transparent: hsl(32, 10%, 30%, 0.85);
    --background-color: hsl(32, 10%, 17.5%);
  }

  .swup-progress-bar {
    height: 5px;
    background-color: var(--primary-color);
  }
</style>

---
import MainLayout from "../../layouts/MainLayout.astro";

export async function getStaticPaths() {
  const games = ["free-fire", "mobile-legends", "honor-kings", "genshin-impact", "honkai-start-rail", "blood-strike", "zenless-zone-zero", "arena-breakout", "farlight", "pubg"];

  return games.map((game) => ({
    params: { slug: game },
    props: { game },
  }));
}

const { game } = Astro.props;
---

<MainLayout title={game} subTitle={game} slug={game}>
  <h1 class="text-4xl font-bold text-[var(--primary-color)]">
    Juego: {game}
  </h1>
  <p class="mt-4 text-lg text-[var(--text-color-lighten)]">
    Esta es la p√°gina dedicada al juego <strong>{game}</strong>.
  </p>
</MainLayout>

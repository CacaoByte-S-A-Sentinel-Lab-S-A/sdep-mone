---
import MainLayout from "../../layouts/MainLayout.astro";

export async function getStaticPaths() {
  const games = ["free-fire", "valorant", "fortnite", "apex-legends", "call-of-duty"];

  return games.map((slug) => ({
    params: { slug },
    props: { slug },
  }));
}

const { slug } = Astro.props;
---

<MainLayout title={slug} subTitle={`Información sobre ${slug}`} slug={slug}>
  <h1 class="text-4xl font-bold text-[var(--primary-color)]">
    Juego: {slug}
  </h1>
  <p class="mt-4 text-lg text-[var(--text-color-lighten)]">
    Esta es la página dedicada al juego <strong>{slug}</strong>.
  </p>
</MainLayout>
